  <modelVersion>4.0.0</modelVersion>

  <artifactId>brave-instrumentation-servlet-jakarta</artifactId>
  <name>Brave Instrumentation: Servlet (Jakarta)</name>

  <properties>
    <!-- Matches Export-Package in bnd.bnd -->
